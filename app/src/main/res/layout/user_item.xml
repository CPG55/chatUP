<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_picture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/primary"
        android:src="@drawable/default_user_icon_128" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_profile_picture"
        android:layout_marginStart="18dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/user_profile_picture"
        android:text="@string/user_name"
        android:textSize="16sp"
        android:textStyle="bold"

        tools:text="Carlos Perez" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_below="@+id/user_profile_picture"
        android:layout_alignStart="@+id/user_profile_picture"
        android:layout_marginTop="8dp"
        />

</RelativeLayout>